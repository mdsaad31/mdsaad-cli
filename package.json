{
  "name": "mdsaad-cli",
  "version": "1.0.0",
  "description": "ðŸš€ A powerful CLI toolkit with 20+ commands: AI chat, weather, math calculations, ASCII art, currency conversion, and more - all without API keys required!",
  "main": "src/cli.js",
  "bin": {
    "mdsaad": "./src/cli.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "node src/cli.js",
    "dev": "nodemon src/cli.js",
    "test": "jest",
    "test:unit": "jest --testPathPatterns='tests/unit'",
    "test:integration": "jest --testPathPatterns='tests/integration'",
    "test:e2e": "jest --testPathPatterns='tests/e2e'",
    "test:security": "jest --testPathPatterns='security.test.js'",
    "test:performance": "jest --testPathPatterns='performance.test.js'",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageReporters=html",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"docs/**/*.md\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"docs/**/*.md\" \"*.md\"",
    "build": "npm run lint && npm run format:check && npm run test:ci",
    "build:docs": "jsdoc -c jsdoc.json",
    "prepare": "echo 'Preparing package for publication...'",
    "prepublishOnly": "echo 'Publishing to npm...'",
    "postinstall": "node scripts/postinstall.js",
    "preversion": "npm run build",
    "postversion": "git push && git push --tags && npm publish",
    "release": "npm version patch && npm run postversion",
    "release:minor": "npm version minor && npm run postversion",
    "release:major": "npm version major && npm run postversion",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "node scripts/security-scan.js",
    "security:fix": "npm audit fix",
    "config": "node utils/config-manager.js",
    "cache": "node utils/cache-manager.js",
    "docs:serve": "docsify serve docs",
    "benchmark": "node benchmarks/run-benchmarks.js",
    "clean": "rimraf node_modules dist coverage .nyc_output",
    "install:global": "npm install -g ."
  },
  "keywords": [
    "cli",
    "command-line",
    "calculator",
    "mathematics",
    "ai",
    "artificial-intelligence",
    "ascii-art",
    "weather",
    "forecast",
    "currency-converter",
    "unit-converter",
    "productivity",
    "automation",
    "secure",
    "cross-platform",
    "plugin-system",
    "performance",
    "developer-tools",
    "utilities",
    "terminal"
  ],
  "author": {
    "name": "MD Saad",
    "email": "mohammedsaad0462@gmail.com",
    "url": "https://github.com/mdsaad31"
  },
  "license": "MIT",
  "homepage": "https://github.com/mdsaad31/mdsaad-cli#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdsaad31/mdsaad-cli.git"
  },
  "bugs": {
    "url": "https://github.com/mdsaad31/mdsaad-cli/issues",
    "email": "mohammedsaad0462@gmail.com"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "type": "commonjs",
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "axios": "^1.12.2",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "figlet": "^1.9.3",
    "fs-extra": "^11.3.2",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.9.6",
    "mathjs": "^14.8.1",
    "moment": "^2.30.1",
    "ora": "^9.0.0",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
